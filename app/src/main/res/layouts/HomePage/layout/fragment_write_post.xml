<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.Controller.WritePostFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:id="@+id/postcard"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/btn_publish_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Post" />
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@drawable/ic_photo_size_select_actual_24_px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70.2dp"
            android:src="@drawable/ic_assignment_ind_24_px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="117dp"
            android:src="@drawable/ic_attachment_24_px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="168dp"
            android:src="@drawable/ic_mood_24_px"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_height="match_parent">
        </Spinner>
    </RelativeLayout>
</android.support.v7.widget.CardView>
 <android.support.v7.widget.CardView
     android:layout_below="@id/postcard"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


     <EditText
         android:id="@+id/edit_txt_puplish"
         android:layout_marginTop="40dp"
         android:layout_width="match_parent"
         android:hint="Write here..."
         android:background="@drawable/selector_edittext"
         android:layout_height="wrap_content" />
         <ImageView
             android:id="@+id/write_post_image"
             android:layout_below="@+id/edit_txt_puplish"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
     </RelativeLayout>
 </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>