<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.Controller.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardhome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">
            <ImageView
                android:id="@+id/btn_Refreshpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="19.3dp"
                android:src="@drawable/exploring_again_icon"

                />
            <ImageView
                android:id="@+id/btn_writepost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="60dp"
                android:src="@drawable/group_62"

                />


            <TextView
                android:id="@+id/home_txtName_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:lineSpacingExtra="4sp"
                android:text="Hi, Enas..."
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/home_profile_image"
                android:layout_width="44.9dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/prof_picture" />
        </android.support.v7.widget.CardView>
<FrameLayout
    android:id="@+id/Frame_Container"
    android:layout_below="@+id/cardhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rec_home_posts"
        >
    </android.support.v7.widget.RecyclerView>
</FrameLayout>
    </RelativeLayout>

</FrameLayout>