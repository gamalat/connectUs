<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRR"
    tools:context=".Discovery.Controller.DiscoveryFrament">
    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#554fef"
                    android:lineSpacingExtra="5sp"
                    android:layout_gravity="center_vertical"
                    android:text="Friends"
                    android:layout_marginLeft="15dp"
                    />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@id/card"
            android:layout_marginTop="3dp"
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_rec_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_below="@id/card2"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#554fef"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_vertical"
                android:text="Friend requests"
                android:layout_marginLeft="15dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@id/card3"
            android:layout_marginTop="3dp"
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_rec_friendRequest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card5"
            android:layout_below="@id/card4"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#554fef"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_vertical"
                android:text="more users"
                android:layout_marginLeft="15dp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@id/card5"
            android:layout_marginTop="3dp"
            android:id="@+id/card6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_rec_morefriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>