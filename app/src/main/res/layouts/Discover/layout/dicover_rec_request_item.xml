<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60.3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dis_profile_image_Reqest"
            android:layout_width="44.9dp"
            android:layout_height="45dp"
            android:layout_marginLeft="14dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/profile_picture"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="77dp">

            <TextView
                android:id="@+id/dis_txt_name_Reqest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="7sp"
                android:text="Enas Gaber"
                android:textColor="#535554"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/dis_txt_faculty_Reqest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a9adac"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="faculty of computers and..."
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_accept_friend"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:text="ACCEPT"
            android:layout_centerVertical="true"
            android:background="@drawable/button_bk"
            android:textColor="#150cf6"/>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_reject_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18.5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_24_px" />
    </RelativeLayout>
</RelativeLayout>