<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pro_profile_imagepost"
            android:layout_width="44.9dp"
            android:layout_height="45dp"
            android:layout_marginLeft="14dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_picture"
            />
    <TextView
        android:id="@+id/pro_post_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#535554"
        android:lineSpacingExtra="5sp"
        android:text="Enas Gaber"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="65dp"
        />
<RelativeLayout
    android:layout_below="@id/pro_post_username"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="68dp">
    <ImageView
        android:id="@+id/profile_post_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/puplish_for_public_icon" />
    <TextView
        android:id="@+id/profilepost_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#a9adac"
        android:text=". 1h"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
    <ImageView
        android:id="@+id/profile_post_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/post_privacy_meno" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/pro_post_txt_readmore"/>
    <ImageView
        android:id="@+id/pro_post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:src="@drawable/save_post_icon"/>
        <ImageView
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:src="@drawable/ic_favorite_border_24_px"/>
        </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

